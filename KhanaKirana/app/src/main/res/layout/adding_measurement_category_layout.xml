<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".KhanaKiranaMainActivity"
    android:id="@+id/adding_measurement_category"
    android:background="@color/kk_app_background">

    <LinearLayout
        android:id="@+id/pictureLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/measurement_category"
            android:id="@+id/measurement_category"
            android:textColor="@color/kk_app_foreground" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kk_add_category"
            android:id="@+id/add_measurement_category_button"
            android:layout_alignParentLeft="true"
            android:textColor="@color/kk_app_foreground"
            android:onClick="addMeasurementCategory"/>
    </LinearLayout>

</RelativeLayout>
